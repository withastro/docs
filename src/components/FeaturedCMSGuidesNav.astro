---
import { getLanguageFromURL } from '~/util/path-utils';
import CardsNav from './NavGrid/CardsNav.astro';
import type { LogoKey } from '~/data/logos';

export interface Props {
	minimal?: boolean;
}

const { minimal } = Astro.props as Props;

const lang = getLanguageFromURL(Astro.url.pathname);

interface Service {
	title: string;
	slug: LogoKey;
	tagline: string;
}

const services: Service[] = [
	{ title: 'Cloud Cannon', slug: 'cloudcannon', tagline: "Git-based CMS built for speed, security, and zero headaches." },
	{ title: 'Sanity', slug: 'sanity', tagline: "Powering all your content applications from a single platform." },
	{ title: 'Storyblok', slug: 'storyblok', tagline: "A headless CMS made for humans. Built for the AI-driven content era." },
];
---

<CardsNav
	minimal={minimal}
	links={services.map(({ title, slug, tagline }) => ({
		title,
		href: `/${lang}/guides/cms/${slug}/`,
		tagline,
		logo: { brand: slug, size: 'large', shape: 'rounded' },
	}))}
/>

<style>
.card {
 gap: 0rem;
}
</style>